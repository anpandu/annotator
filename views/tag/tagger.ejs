<script>
    var _content = <%-JSON.stringify(content)%>;
    var _tags = <%-JSON.stringify(tags)%>
</script>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<style type="text/css">
    body{background-image: url('/images/Polos.jpg');}
</style>
  
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <ul class="nav navbar-nav">
        <li><a href="/explore">Home</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/logout">logout</a></li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div style="height:100px;"></div>
    <div class="row">
      <div class="col-sm-6" id="content">
        <div class="panel panel-default">    
          <div class="panel-heading clearfix">
            <h3 class="panel-title pull-left">Content</h3>
          </div>
          <div class="panel-body" id="ContentCardHolder">
            <textarea class="form-control" rows="15"></textarea>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="panel panel-default">    
          <div class="panel-heading clearfix">
            <h3 class="panel-title pull-left">Tags</h3>
          </div>
          <div class="panel-body">
            <form class="form-horizontal" method="POST" action="/tag/<%-content.id%>">
              <div id="tag_list"></div>
              <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                  <button type="submit" class="btn btn-default">submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

<!-- Bootstrap 3.3.2 JS -->
<script src="http://code.jquery.com/jquery-1.11.1.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.13.3/react.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.13.3/JSXTransformer.js"></script>

<script type="text/jsx" src="/js/tagger/content_card.js"></script>
<script type="text/jsx" src="/js/tagger/tag_list.js"></script>

<script type="text/jsx">
  React.render(
      <ContentCard content={_content}/>,
      document.getElementById('ContentCardHolder')
  );
  React.render(
      <TagList tags={_tags}/>,
      document.getElementById('tag_list')
  );
</script>